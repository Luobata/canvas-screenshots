{
    "compilerOptions": {
        "outDir": "./typings/",
        "sourceMap": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es2015",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": {
            "LIB/*": ["src/canvas/lib/*"],
            "INSERT/*": ["src/canvas/insert/*"],
            "FunBox/*": ["src/canvas/function-box/*"],
            "Canvas/*": ["src/canvas/*"]
        },
        "lib": ["es2015", "es2017", "dom"]
    },
    "include": ["./src/**/*"]
}
