{
    "defaultSeverity": "error",
    "extends": [
        "tslint-microsoft-contrib"
        //"tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "no-implicit-dependencies": false,
        "no-submodule-imports": [true, "Canvas", "LIB", "FunBox", "INSERT"],
        "strict-boolean-expressions": [
            true,
            "allow-null-union",
            "allow-undefined-union",
            "allow-string",
            "allow-number"
        ],
        "no-default-export": false,
        "match-default-export-name": false,
        "export-name": false,
        "import-name": false,
        "space-within-parens": false,
        "max-func-body-length": [
            true,
            200,
            { "ignore-parameters-to-function-regex": "describe" }
        ],
        "align": [true, "parameters", "statements"],
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "always",
                    "typeLiterals": "ignore"
                },
                "singleline": {
                    "objects": "never",
                    "arrays": "never",
                    "functions": "never",
                    "typeLiterals": "ignore"
                }
            }
        ],
        "no-suspicious-comment": false,
        "comment-format": [
            true,
            "check-lowercase",
            { "ignore-words": ["TODO", "HACK"] }
        ]
    },
    "rulesDirectory": []
}
